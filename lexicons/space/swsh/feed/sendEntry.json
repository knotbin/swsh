{
  "lexicon": 1,
  "id": "space.swsh.feed.sendEntry",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Send an entry.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["content"],
          "properties": {
            "title": {
              "type": "string",
              "maxLength": 1000
            },
            "subtitle": {
              "type": "string",
              "maxLength": 1000
            },
            "content": {
              "type": "string",
              "maxLength": 100000
            },
            "facets": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "space.swsh.richtext.facet"
              }
            },
            "visibility": {
              "type": "string",
              "enum": ["public", "url", "author"],
              "default": "public",
              "description": "Tells the visibility of the article to AppView."
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["entry"],
          "properties": {
            "entry": {
              "type": "ref",
              "ref": "space.swsh.feed.defs#entryView"
            }
          }
        }
      }
    }
  }
}
